<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnAppearing.LoginPage"
             xmlns:local="clr-namespace:OnAppearing"
             xmlns:fontAwesome="clr-namespace:FontAwesome"
             BackgroundColor="{DynamicResource PrimaryColor}"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <Grid>
            <StackLayout Margin="20" MaximumWidthRequest="350">
                <!-- <ActivityIndicator IsRunning="True" />-->
                
                

               
                

                <StackLayout >
                    <Button Text="Anmelden" TextColor="White" Command="{Binding LoginButton}" MaximumWidthRequest="350" BackgroundColor="#0A3250" CornerRadius="5" Margin="0,20" FontFamily="OpenSansBold" />
                    

                </StackLayout>





            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
